<%- include("partials/operations_header"); -%>

<div class="view-box">
    <h1 class="view-header display-4"><%= length %> Record/s Found</h1>
    
    <div class="row">
        <div class="col-3">
            <p class="view-table-header">First Name</p>
        </div>
        <div class="col-3">
            <p class="view-table-header">Last Name</p>
        </div>
        <div class="col-2">
            <p class="view-table-header">Phone</p>
        </div>
        <div class="col-2">
            <p class="view-table-header">Applied For</p>
        </div>
        <div class="col-2">
            <p class="view-table-header">Rating</p>
        </div>
    </div>
    <hr>

    <% var count = 0 %>
    <% foundItems.forEach(function(foundItem){ %>
        <div class="row">
            <div class="col-3">
                <p><%= foundItem.firstName %></p>
            </div>
            <div class="col-3">
                <p><%= foundItem.lastName %></p>
            </div>
            <div class="col-2">
                <p><%= foundItem.phone %></p>
            </div>
            <div class="col-2">
                <p><%= foundItem.applied %></p>
            </div>
            <div class="col-2">
                <p><%= foundItem.rating %></p>
            </div>
        </div>
        <hr>
    <% }); %>
</div>


<%- include("partials/footer"); -%>